{
  "languageserver": {
    "solidity": {
      "command": "/opt/homebrew/bin/solc",
      "args": ["--lsp"],
      "rootPatterns": [".git/"],
      "filetypes": ["solidity"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }

  }
}
